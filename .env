# Default environment (override in production as needed)
APP_ENV=development
LOG_LEVEL=INFO

# Postgres
POSTGRES_USER=lap
POSTGRES_PASSWORD=lap
POSTGRES_DB=lap
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://lap:lap@db:5432/lap

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Kafka
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=logs
